{
  "name": "arcade-back-end",
  "version": "1.0.0",
  "description": "",
  "main": "dist/index.js",
  "scripts": {
    "prebuild": "rm -rf dist",
    "build": "ttsc -p tsconfig.build.json",
    "dev": "NODE_ENV=development nodemon --watch 'src/' --exec 'ts-node -r tsconfig-paths/register ./src/server.ts' -e ts",
    "start": "npx prisma migrate deploy && npx prisma db push && npx prisma generate && node dist/server.js",
    "migration:run": "npx prisma migrate deploy",
    "migration:generate": "npm run dev:load-envs prisma migrate dev",
    "test": "NODE_ENV=test jest --passWithNoTests --runInBand",
    "test:migration:run": "npm run test:load-envs prisma migrate deploy",
    "test:migration:generate": "npm run test:load-envs prisma migrate dev",
    "test:watch": "jest --watch --passWithNoTests --runInBand",
    "test:load-envs": "dotenv -e .env.test",
    "test:seed": "npm run test:load-envs prisma db seed",
    "dev:load-envs": "dotenv -e .env.development",
    "dev:migration:run": "npm run dev:load-envs prisma migrate deploy",
    "dev:migration:generate": "npm run dev:load-envs prisma migrate dev",
    "dev:seed": "npm run dev:load-envs prisma db seed",
    "dev:dbpull": "npm run dev:load-envs prisma db pull"
  },
  "keywords": [
    "arcade",
    "back-end",
    "typescript",
    "postgres",
    "express",
    "nodejs"
  ],
  "author": "Yuri Desideri",
  "license": "ISC",
  "prisma": {
    "seed": "npm run dev:load-envs -- ts-node prisma/seed.ts"
  },
  "devDependencies": {
    "@faker-js/faker": "^6.3.1",
    "@types/bcrypt": "^5.0.0",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/jest": "^26.0.23",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/node": "^17.0.45",
    "@types/supertest": "^2.0.12",
    "dotenv-cli": "^5.1.0",
    "jest": "^26.6.3",
    "nodemon": "^2.0.16",
    "prisma": "^3.14.0",
    "supertest": "^6.2.3",
    "ts-jest": "^26.5.5",
    "ts-node": "^10.7.0",
    "tsconfig-paths": "3.9.0",
    "ttypescript": "^1.5.15",
    "typescript": "^4.2.4",
    "typescript-transform-paths": "2.2.3"
  },
  "dependencies": {
    "@prisma/client": "^3.14.0",
    "@types/axios": "^0.14.0",
    "bcrypt": "^5.0.1",
    "cors": "^2.8.5",
    "dayjs": "^1.11.2",
    "dotenv": "^16.0.1",
    "dotenv-expand": "^8.0.3",
    "express": "^4.18.1",
    "http-status": "^1.5.2",
    "joi": "^17.6.0",
    "jsonwebtoken": "^9.0.0"
  }
}
